        <% if (username) { %>
            <ul>
                <li>
                    <span>Hello, <%- username %>!</span>
                    <form action="/sign_out" method="POST">
                        <button type="submit">Sign Out</button>
                    </form>
                </li>
            </ul>
       <% } else { %>
            <ul>
                <li>
                    <form action="/sign_in" method="POST">
                        <input type="text" name="username">
                        <button type="submit">Sign In</button>
                    </form>
                </li>
            </ul>   
       <% } %>

    </nav>
</header>
